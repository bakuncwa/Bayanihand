@model HandymanVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card mb-4" style="background-color: #FAF9F6; border: 1px solid #dee2e6; border-radius: 10px;">
                <div class="card-body text-center">
                    <img src="https://media.istockphoto.com/id/1445981943/vector/repair-service-man-worker-logo-mechanic-workshop-vector-illustration.jpg?s=612x612&w=0&k=20&c=vizyPckB7zfeO0HYpJaj6uSm1jiZ9ozqlFWwWeFPCy4="
                         alt="avatar" class="img-fluid" style="width: 150px;">
                    <h5 class="my-3">@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted mb-1"><b>Handyman</b></p>
                    <p class="text-muted mb-4">@Model.City, @Model.Region</p>
                    <div class="d-flex justify-content-center mb-2">
                        <a asp-controller="Handyman" asp-action="EditProfile" class="btn btn-warning" style="background-color: #FF911F;">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card mb-4" style="background-color: #FAF9F6; border: 1px solid #dee2e6; border-radius: 10px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="col-sm-9">Full Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone No.</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.PhoneNo</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Address</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Barangay No</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.BarangayNo</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Barangay Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.BarangayName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">ZIP Code</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.ZIPCode</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Salary Range</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">PHP @Model.ServiceCharge.ToString("F2")</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Years of Experience</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.YearsOfExperience</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>