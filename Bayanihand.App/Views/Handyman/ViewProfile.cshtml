@model HandymanVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card mb-4" style="background-color: #FAF9F6;">
                <div class="card-body text-center">
                    <img src="https://media.istockphoto.com/id/1445981943/vector/repair-service-man-worker-logo-mechanic-workshop-vector-illustration.jpg?s=612x612&w=0&k=20&c=vizyPckB7zfeO0HYpJaj6uSm1jiZ9ozqlFWwWeFPCy4="
                         alt="avatar" class="img-fluid" style="width: 150px;">
                    <h5 class="my-3">@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted mb-1"><b>Handyman</b></p>
                    <p class="text-muted mb-4">@Model.City, @Model.Region</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card mb-4" style="background-color: #FAF9F6;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Full Name</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Phone No.</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.PhoneNo</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Address</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Address</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Barangay No</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.BarangayNo</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Barangay Name</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.BarangayName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>ZIP Code</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.ZIPCode</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Salary Range</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">PHP @Model.ServiceCharge.ToString("F2")</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0"><b>Years of Experience</b></p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.YearsOfExperience</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
