@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        @if (User.IsInRole("Handyman"))
        {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">
                Manage
            </a>
            <div class="dropdown-menu" data-bs-toggle="static">
                <a class="nav-link" asp-controller="Schedule" asp-action="Index">Manage Schedules</a>
                <a class="nav-link" asp-controller="Service" asp-action="Add">Add Services</a>
                <a class="nav-link" asp-controller="Service" asp-action="Manage">Manage Services</a>
                <a class="nav-link" asp-controller="Handyman" asp-action="Profile">Profile</a>
            </div>
        </li>
@*         <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">
                Commissions
            </a>
            <div class="dropdown-menu" data-bs-toggle="static">
                <a class="nav-link" asp-controller="Cart" asp-action="Booked">Commission History</a>
            </div>
        </li> *@
        }
        else if (User.IsInRole("Customer"))
        {
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Service" asp-action="Index">Services</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Cart" asp-action="History">Commission History</a>
            </li>
        </ul>
        }
    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown"
       href="#" role="button" aria-haspopup="true" aria-expanded="true">
        User: @User.Identity.Name
    </a>
    <div class="dropdown-menu" data-bs-popper="static">
        <form asp-controller="Account" asp-action="LogOut" method="post">
            <input type="submit" class="dropdown-item" value="LogOut" />
        </form>
    </div>
        </li>
}
else
{
    <!-- Not Logged In -->
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">
            Account
        </a>
        <div class="dropdown-menu" data-bs-toggle="static">
            <a class="dropdown-item" asp-controller="Account" asp-action="SignIn">Log In</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </li>
}